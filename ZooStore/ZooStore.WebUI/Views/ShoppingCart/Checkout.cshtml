@model GameStore.WebUI.Models.CheckoutViewModel
@{
    ViewBag.Title = "Оформление заказа";
}
@Html.Partial("_FrontPartial")
<div class="box-body">
    @using (Html.BeginForm("PlaceOrder", "ShoppingCart", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10"><h3>Ваши данные</h3></div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                ФИО @Html.TextBoxFor(c => c.FullName, new { @class = "form-control", @placeholder = "Иванов Иван Иванович" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                Адрес @Html.TextBoxFor(c => c.Address, new { @class = "form-control", @placeholder = "Большая Красная, 55" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
               Город @Html.TextBoxFor(c => c.City, new { @class = "form-control", @placeholder = "Казань" })
            </div>
        </div>
        @*<div class="form-group">
            <div class="col-sm-10">
               Страна @Html.DropDownList("State", new SelectList(ViewBag.States, "Key", "Name", Model.State), new { @class = "form-control" })
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-sm-10">
               Номер телефона @Html.TextBoxFor(c => c.Zip, new { @class = "form-control", @placeholder = "88432310109" })
            </div>
        </div>
        
        <div class="form-group">
            <h4>Способы оплаты</h4>
            @*<p><input name="dzen" type="radio" checked> Курьеру при доставке (наличными или банковской картой)</p>
        <p><input name="dzen" type="radio" checked> В магазине при самовывозе</p>*@
            <div class="col-sm-10">
                @Html.DropDownList("State", new SelectList(ViewBag.States, "Key", "Name", Model.State), new { @class = "form-control" })
            </div>
        </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.ActionLink("Вернуться назад", "Index", new { controller = "ShoppingCart" }, new { @class = "btn btn-danger" })
            <input type="submit" style="padding-left:20px" class="btn btn-primary" value="ЗАКАЗАТЬ" />


            @*@Html.ActionLink("ЗАКАЗАТЬ", "Successful", new { controller = "ShoppingCart" }, new { @class = "btn btn-primary" })*@

        </div>
    </div>
    }
</div>